<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel addStyleNames="courseClassConfig">
		<g:HTMLPanel ui:field="titleEdit" addStyleNames="title unclear left">Editar Turma</g:HTMLPanel>
		<g:HTMLPanel ui:field="titleCreate" addStyleNames="title marginTop25">Criar Turma</g:HTMLPanel>
    <g:FlowPanel addStyleNames="standardButtonBar unclear right">
      <g:Button ui:field="btnDelete" addStyleNames="btnSelected btnStandard right"/>
    </g:FlowPanel>
		<b:Form ui:field="form" addStyleNames="profileForm left">
			<g:FlowPanel ui:field="profileFields" addStyleNames="fieldsWrapper">		
			</g:FlowPanel>		
			<g:FlowPanel addStyleNames="standardButtonBar">
				<g:Button ui:field="btnOK" addStyleNames="btnAction btnStandard"/>
				<g:Button ui:field="btnCancel" addStyleNames="btnNotSelected btnStandard"/>
			</g:FlowPanel>
		</b:Form>		
    <b:Modal ui:field="confirmModal" title="Confirmação" backdrop="NORMAL" addStyleNames="forgotPasswordModal">
      <g:FlowPanel>
        <g:Label ui:field="confirmText"></g:Label>
        <g:FlowPanel addStyleNames="standardButtonBar">
          <b:Button ui:field="btnModalOK" addStyleNames="btnAction btnStandard" size="MINI"/>
          <b:Button ui:field="btnModalCancel" addStyleNames="btnNotSelected btnStandard" size="MINI"/>
        </g:FlowPanel>
      </g:FlowPanel>
    </b:Modal>
	</g:FlowPanel>

</ui:UiBinder>