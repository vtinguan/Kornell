{
    "Parameters": {},
    "Resources": {
        "knlgwtbucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "BucketName" : {
                    "Fn::Join": ["-",[
                        {"Ref": "AWS::StackName"},
                        "gwt"]]
                    }
            }
        },
        "knlgwtbucketpolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "knlgwtbucket"
                },
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Effect": "Allow",
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "knlgwtbucket"
                                        },
                                        "/*"
                                    ]
                                ]
                            },
                            "Principal": "*"
                        }
                    ]
                }
            }
        },

        "knllogsbucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
            "BucketName" : {
                    "Fn::Join": ["-",[
                        {"Ref": "AWS::StackName"},
                        "logs"]]
                    }
            }
        }
    },
    "Outputs": {
        "knlgwtbucketname": {
            "Description": "S3_GWT_BUCKET",
            "Value": {
                "Ref": "knlgwtbucket"
            }
        },
        
        "knllogbucketname": {
            "Description": "S3_LOGS_BUCKET",
            "Value": {
                "Ref": "knllogsbucket"
            }
        }
    }
}
