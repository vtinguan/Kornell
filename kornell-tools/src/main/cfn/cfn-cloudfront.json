{
    "Parameters": {
        "knldomainname": {
            "Type": "String"
        },
        "knlgwtbucketname": {
            "Type": "String"
        },
        "knlcdnpriceclass": {
            "Type": "String",
            "Default": "PriceClass_100"
        },
        "knllogsbucketname": {
            "Type": "String"
        },
        "knlusercontentbucketname": {
            "Type": "String"
        },
        "knlapiendpoint": {
            "Type": "String"
        },
        "knlcertificateid": {
          "Type": "String"
        },
        "knlhostedzoneid": {
          "Type": "String",
          "Default": "Z2RR98NTBICQ16"
        },

        "knlcdnhostedzoneid": {
          "Type": "String",
          "Default": "Z2FDTNDATAQYW2"
        }

    },
    "Resources": {
        "knlrepositorybucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName" : {
                    "Fn::Join": ["-",[
                        {"Ref": "AWS::StackName"},
                        "repository"]]
                    }
                }
        },

        "knlrepositorybucketpolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "DependsOn" : "knlrepositorybucket",
            "Properties": {
                "Bucket": {
                    "Ref": "knlrepositorybucket"
                },
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Effect": "Allow",
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "knlrepositorybucket"
                                        },
                                        "/*"
                                    ]
                                ]
                            },
                            "Principal": "*"
                        }
                    ]
                }
            }
        },

        "knlcdn": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Logging" : {
                      "Bucket" : {"Fn::Join": [ "",
                                [ {"Ref": "knllogsbucketname"},
                                ".s3.amazonaws.com" ]]
                            },
                      "IncludeCookies" : "false",
                      "Prefix" : "cloudfront"
                    },
                    "ViewerCertificate": {
                        "IamCertificateId" : {"Ref":"knlcertificateid"},
                        "SslSupportMethod" : "sni-only"                        
                    },
                    "Origins": [
                        {
                            "Id": "knlgwtorigin",
                            "DomainName": 
                            {"Fn::Join": [ "",
                                [ {"Ref": "knlgwtbucketname"},
                                ".s3.amazonaws.com" ]]
                            },
                            "S3OriginConfig": {}
                        },
                        {
                            "Id": "knlrepositoryorigin",
                            "DomainName": {
                                "Fn::GetAtt": ["knlrepositorybucket","DomainName"]
                            },
                            "S3OriginConfig": {}
                        },
                        {
                            "Id": "knlusercontentorigin",
                            "DomainName": {
                                "Fn::Join": [
                                    "",
                                    [
                                        {
                                            "Ref": "knlusercontentbucketname"
                                        },
                                        ".s3.amazonaws.com"
                                    ]
                                ]
                            },
                            "S3OriginConfig": {}
                        },
                        {
                            "Id": "knlapiorigin",
                            "DomainName": {
                                "Ref": "knlapiendpoint"
                            },
                            "CustomOriginConfig": {
                                "OriginProtocolPolicy": "match-viewer"
                            }
                        }
                    ],
                    "Enabled": "true",
                    "Comment": "Content Distribution",
                    "DefaultRootObject": "Kornell.nocache.html",
                    "Aliases": [{"Ref": "knldomainname"}],
                    "DefaultCacheBehavior": {
                        "AllowedMethods": [
                            "DELETE",
                            "GET",
                            "HEAD",
                            "OPTIONS",
                            "PATCH",
                            "POST",
                            "PUT"
                        ],
                        "TargetOriginId": "knlgwtorigin",
                        "Compress": "true",
                        "ForwardedValues": {
                            "QueryString": "true"
                        },
                        "ViewerProtocolPolicy": "redirect-to-https"
                    },
                    "PriceClass": {
                        "Ref": "knlcdnpriceclass"
                    },
                    "CacheBehaviors": [
                        {
                            "PathPattern": "/api/*",
                            "AllowedMethods": [
                                "DELETE",
                                "GET",
                                "HEAD",
                                "OPTIONS",
                                "PATCH",
                                "POST",
                                "PUT"
                            ],
                            "CachedMethods": [
                                "GET",
                                "HEAD",
                                "OPTIONS"
                            ],
                            "Compress": "true",
                            "DefaultTTL": "0",
                            "ForwardedValues": {
                                "Cookies": {
                                    "Forward": "whitelist",
                                    "WhitelistedNames": [
                                        "X-KNL-TOKEN",
                                        "knlLocale"
                                    ]
                                },
                                "Headers": [
                                    "*"
                                ],
                                "QueryString": "true"
                            },
                            "SmoothStreaming": "false",
                            "TargetOriginId": "knlapiorigin",
                            "ViewerProtocolPolicy": "redirect-to-https"
                        },
                        {
                            "PathPattern": "/repository/*",
                            "AllowedMethods": [
                                "DELETE",
                                "GET",
                                "HEAD",
                                "OPTIONS",
                                "PATCH",
                                "POST",
                                "PUT"
                            ],
                            "CachedMethods": [
                                "GET",
                                "HEAD",
                                "OPTIONS"
                            ],
                            "Compress": "true",
                            "DefaultTTL": "0",
                            "ForwardedValues": {
                                "QueryString": "true"
                            },
                            "SmoothStreaming": "false",
                            "TargetOriginId": "knlrepositoryorigin",
                            "ViewerProtocolPolicy": "redirect-to-https"
                        },
                        {
                            "PathPattern": "/usercontent/*",
                            "AllowedMethods": [
                                "DELETE",
                                "GET",
                                "HEAD",
                                "OPTIONS",
                                "PATCH",
                                "POST",
                                "PUT"
                            ],
                            "CachedMethods": [
                                "GET",
                                "HEAD",
                                "OPTIONS"
                            ],
                            "Compress": "true",
                            "DefaultTTL": "0",
                            "ForwardedValues": {
                                "QueryString": "true"
                            },
                            "SmoothStreaming": "false",
                            "TargetOriginId": "knlusercontentorigin",
                            "ViewerProtocolPolicy": "redirect-to-https"
                        }

                    ]
                }
            }
        },

    "knlcdndns":{
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "AliasTarget" : {
          "DNSName" : {
            "Fn::GetAtt": [ "knlcdn","DomainName"]
          },
          "EvaluateTargetHealth" : "false",
          "HostedZoneId" : {"Ref":"knlcdnhostedzoneid"}
        },
        "Comment" : "CDN Endpoint",
        "HostedZoneId" : {"Ref":"knlhostedzoneid"},
        "Name" : {"Ref": "knldomainname"},   
        "Type" : "A"
      }
    }
      
    },


  "Outputs" : {
    "knlrepositorybucketname": {
            "Description": "S3_REPOSITORY_BUCKET",
            "Value": {
                "Ref": "knlrepositorybucket"
            }
    },

    "knlcdndomainname": {
      "Description": "CDN_DOMAIN",
      "Value": {
        "Fn::GetAtt": [ "knlcdn","DomainName"]
      }
    },

    "knl": {
      "Description": "EDUVEM_URL",
      "Value": {"Ref":"knlcdndns"}
    }

  }

}