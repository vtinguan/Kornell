{
  "Parameters": {

    "knldbsubnetids": {
      "Type": "List<AWS::EC2::Subnet::Id>"
    },

    "knldbsgids": {
      "Type": "List<AWS::EC2::SecurityGroup::Id>"
    },

    "knldbpublic": {
      "Type": "String",
      "Default": "true"
    },

    "knldbstorage": {
      "Type": "String",
      "Default": "32"
    },

    "knldbmultiaz": {
      "Type": "String",
      "Default": "false"
    },

    "knldbpassword": {
      "NoEcho": "true",
      "Type": "String",
      "Default": "CHANGEMEPLEASE",
      "Description": "Test database admin account password",
      "MinLength": "8",
      "MaxLength": "41",
      "AllowedPattern": "[a-zA-Z0-9]*",
      "ConstraintDescription": "must contain only alphanumeric characters."
    },

    "knldbinstancetype": {
      "Type": "String",
      "Default": "db.t2.micro",
      "AllowedValues": [
        "db.t2.micro",
        "db.t2.small",
        "db.t2.medium",
        "db.t2.large",
        "db.m4.large",
        "db.m4.xlarge",
        "db.m4.2xlarge",
        "db.m4.4xlarge",
        "db.m4.10xlarge"
      ],
      "Description": "Enter t1.micro, m1.small, or m1.large. Default is t1.micro."
    }
  },

  "Resources": {

    "knldbsubnetgrp": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "Kornell DB Subnet Group",
        "SubnetIds": {"Ref":"knldbsubnetids"}
      }
    },

    "knldb": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "DBInstanceIdentifier": {
              "Ref": "AWS::StackName"
        },
        "Engine": "MySQL",
		    "EngineVersion" : "5.6",
        "DBName": "ebdb",
        "PubliclyAccessible": "true",
        "DBInstanceClass": {
          "Ref": "knldbinstancetype"
        },
        "MultiAZ": {
          "Ref": "knldbmultiaz"
        },
        "AllocatedStorage": {
          "Ref": "knldbstorage"
        },
        "MasterUsername": "root",
        "MasterUserPassword": {
          "Ref": "knldbpassword"
        },
        "DBSubnetGroupName": {
          "Ref": "knldbsubnetgrp"
        },
        "VPCSecurityGroups": {"Ref":"knldbsgids"},
        "PubliclyAccessible": {
          "Ref": "knldbpublic"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "AWS::StackName"
            }
          }
        ]
      }
    }
  },

  "Outputs": {

    "knljdbcurl": {
      "Description": "JDBC_CONNECTION_STRING",
      "Value": {
        "Fn::Join": ["", [
          "jdbc:mysql://", {
            "Fn::GetAtt": ["knldb", "Endpoint.Address"]
          },
          ":", {
            "Fn::GetAtt": ["knldb", "Endpoint.Port"]
          },
          "/ebdb"
        ]]
      }
    },

    "knljdbcdriver": {
      "Description": "JDBC_DRIVER",
      "Value": "com.mysql.jdbc.Driver"
    },

    "knljdbcusername": {
      "Description": "JDBC_USERNAME",
      "Value" : "???"
    },

    "knljdbcpassword" :{
      "Description": "JDBC_PASSWORD",
      "Value" : "???"
    }

  }

}
